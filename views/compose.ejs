<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="title">Title</label><br />
    <input type="text" name="postTitle" id="title" class="form-control" /><br />
    <label for="composeText">Post</label><br />
    <textarea
      name="composeText"
      id="composeText"
      class="form-control"
      rows="5"
      cols="30"
    ></textarea
    ><br />
    <button class="btn btn-primary" type="submit">Publish</button>
  </div>
</form>
<%- include("partials/footer") -%>
